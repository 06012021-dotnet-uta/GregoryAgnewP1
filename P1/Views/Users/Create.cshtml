@model DatabaseModels.User

@{
    ViewData["Title"] = "Create Account";
}
@section Login
{
<head>
    <link href="~/css/signin.css" rel="stylesheet">
</head>
<body class="text-center">

    <main class="form-signin">
        <form asp-action="Create">
            <h1 class="h3 mb-3 fw-normal">Create your account</h1>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="Firstname" type="text" class="form-control" placeholder="First Name">
                <label asp-for="Firstname" for="floatingInput">First Name</label>
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Lastname" type="text" class="form-control" placeholder="Last Name">
                <label asp-for="Lastname" for="floatingInput">Last Name</label>
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
                <label asp-for="Email" for="floatingInput">Email address</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" type="password" id="initial" class="form-control" placeholder="Password">
                <label asp-for="Password" for="floatingPassword">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="password" name="confirm" class="form-control" placeholder="Password">
                <label for="floatingPassword">Re-enter Password</label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Create Account</button>
            <a class="btn-link" asp-controller="Users" asp-action="Login">Already have an account?<br /> Log In</a>
        </form>
        
    </main>
</body>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
